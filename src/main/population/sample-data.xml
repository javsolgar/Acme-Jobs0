<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="conversion-service.xml" />
	
	<!--  Shouts -->
	
	<bean id="shout01" class="acme.entities.shouts.Shout">
	<property name="author" value="John Doe"></property>
	<property name="text" value="I'm happy"></property>
	<property name="moment" value="2019/09/09 10:00"></property>
	</bean>
	
	<bean id="shout02" class="acme.entities.shouts.Shout">
	<property name="author" value="Jane Doe"></property>
	<property name="text" value="I'm the master of my room!"></property>
	<property name="moment" value="2019/08/09 15:55"></property>
	</bean>
	
	<bean id="shout03" class="acme.entities.shouts.Shout">
	<property name="author" value="Foo Bar"></property>
	<property name="text" value="Just turning 20!"></property>
	<property name="moment" value="2019/09/07 00:00"></property>
	</bean>
	
	<!--  GonzalezBulletin -->
	
	<bean id="Gonzalez01" class="acme.entities.shouts.Gonzalez">
	<property name="author" value="John Doe"></property>
	<property name="text" value="I'm happy"></property>
	<property name="city" value="Seville"></property>
	<property name="moment" value="2019/09/09 10:00"></property>
	</bean>
	
	<bean id="Gonzalez02" class="acme.entities.shouts.Gonzalez">
	<property name="author" value="Jane Doe"></property>
	<property name="text" value="I'm the master of my room!"></property>
	<property name="city" value="Barcelona"></property>
	<property name="moment" value="2019/08/09 15:55"></property>
	</bean>
	
	<bean id="Gonzalez03" class="acme.entities.shouts.Gonzalez">
	<property name="author" value="Foo Bar"></property>
	<property name="text" value="Just turning 20!"></property>
	<property name="city" value="Madrid"></property>
	<property name="moment" value="2019/09/07 00:00"></property>
	</bean>
	
	<!--  Gonzalez2Bulletin -->
	
	<bean id="GonzalezB1" class="acme.entities.shouts.Gonzalezbulletin">
	<property name="author" value="John Doe"></property>
	<property name="text" value="I'm happy"></property>
	<property name="age" value="41"></property>
	<property name="moment" value="2019/09/09 10:00"></property>
	</bean>
	
	<bean id="GonzalezB2" class="acme.entities.shouts.Gonzalezbulletin">
	<property name="author" value="Jane Doe"></property>
	<property name="text" value="I'm the master of my room!"></property>
	<property name="age" value="30"></property>
	<property name="moment" value="2019/08/09 15:55"></property>
	</bean>
	
	<bean id="GonzalezB3" class="acme.entities.shouts.Gonzalezbulletin">
	<property name="author" value="Foo Bar"></property>
	<property name="text" value="Just turning 20!"></property>
	<property name="age" value="20"></property>
	<property name="moment" value="2019/09/07 00:00"></property>
	</bean>

</beans>
